<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UserMenuListServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.UserMenuListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstallerServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.InstallerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstallerModulesListServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.InstallerModulesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstallerCheckDependenciesServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.InstallerCheckDependenciesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstallerCreateServerServlet</servlet-name>
        <servlet-class>com.newton449.virtualserverclient.testserver.InstallerCreateServerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMenuListServlet</servlet-name>
        <url-pattern>/user/menu_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstallerServlet</servlet-name>
        <url-pattern>/installer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstallerModulesListServlet</servlet-name>
        <url-pattern>/installer/modules_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstallerCheckDependenciesServlet</servlet-name>
        <url-pattern>/installer/check_dependencies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstallerCreateServerServlet</servlet-name>
        <url-pattern>/installer/create_server</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
